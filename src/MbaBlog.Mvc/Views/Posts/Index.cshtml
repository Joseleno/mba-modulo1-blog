@using MbaBlog.Data.Domain
@model IEnumerable<Post>

<div class="grid-x align-center">
    <div class="cell medium-10">
        <div class="grid-x align-right" style="padding-top: 20px;">
            <a asp-action="Create" class="hollow button large">Novo Post</a>
        </div>
        <p>
            @foreach (var item in Model)
            {
                <div class="blog-post">
                    <h3 style="color: rgb(0, 33, 60);">@Html.DisplayFor(modelItem => item.Titulo)</h3>
                    <p style="text-align:justify; text-justify: inter-word;">
                            @item.Texto<a class="link" asp-action="Details" asp-route-id="@item.Id">
                            Leia&nbsp;mais</a>
                    </p>
                </div>
            }
        </p>
    </div>
</div>
