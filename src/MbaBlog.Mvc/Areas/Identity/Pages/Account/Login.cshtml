@page
@using MbaBlog.Mvc.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="grid-x align-center">
    <form id="account" method="post">
        <div class="blog-post">
            <h3>Bem vindo a pagina de login.</h3>
            <p>
            <div asp-validation-summary="ModelOnly" style="color: red;" role="alert"></div>
            <div>
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                    placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" style="color: red;"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="form-label">Senha</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                    aria-required="true" placeholder="senha" />
                <span asp-validation-for="Input.Password" style="color: red;"></span>
            </div>
            <div>
                <button id="login-submit" type="submit" class="button">Entrar</button> |
                <a asp-controller="Posts" asp-action="Index"><input type="button" value="Inicio"
                        class="button secondary" /></a>
            </div>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
